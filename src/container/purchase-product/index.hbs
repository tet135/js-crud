{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
  {{>heading title="Інформація про товар" }}
  
  {{#with data.product}}
    <form method="POST" action="/purchase-create?id={{id}}">
      <div class="product-info">

        <img src="{{img}}" alt="{{title}}" class="product-info__image">
        <h2 class="product-info__title">{{title}}</h2>
        {{>divider }}
        <p class="product-info__description">{{description}}</p>
        {{>divider }}

        {{#each category}}
            <span class="product-info__category product-info__category--{{id}}">{{text}}</span>
        {{/each}}

        {{>field label="Кількість" type="number" name="amount" value="1"}}

        {{>button text="Оформити замовлення" price=price}}

      </div>
    </form>
  {{/with}}

   {{>heading title="Інші товари" info="Комп'ютери та ноутбуки" }}

  <div class="product-list">
    {{#each data.list}}
      {{>purchase-product data=this}}

    {{/each}}
  </div>
</main>



{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}


<main class="main">
  {{#with data}}
  <div class="main__content">
    <h1 class="title title--center">Додати до плейліста {{name}}</h1>

    {{#each tracks}}
    <form method="POST" action="/spotify-add-track?playlistId={{../playlistId}}&trackId={{id}}"  class="form">
      <ul class="track__list">
        {{!-- /////////////!!!!!!!!!!!!!!!!!!!!!!!! --}}
        <input type="hidden" name="playlistId" value="{{../playlistId}}">
        <input type="hidden" name="trackId" value="{{id}}">

        <li class="track">
          <img width="92px" height="92px" src="{{image}}" alt="{{name}}">
          <div class="track__content">
            <strong class="track__name">{{name}}</strong>
            <em class="track__author">{{author}}</em>
          </div>
          <button type="submit" class="form__button">
            <img src="../../img/svg/add-round-button.svg" alt="add-track">
          </button>
        </li>
      </ul>
    </form>
    {{/each}}
  </div>
  {{/with}}
</main>




{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

{{>nav}}
<main class="main">
  {{#with data}}
  <div class="main__content">
    <h1 class="title title--center">Мій плейліст {{name}}</h1>

    <a href="/spotify-add-track?playlistId={{playlistId}}" class="add-button">
      <img src="../../img/svg/add-button.svg" alt="add-track">
      Додати до плейліста
    </a>
    <ul class="track__list">
      {{#each tracks}}
      <li class="track">
        <img width="92px" height="92px" src="{{image}}" alt="{{name}}">
        <div class="track__content">
          <strong class="track__name">{{name}}</strong>
          <em class="track__author">{{author}}</em>
        </div>
        <a href="/spotify-delete-track?playlistId={{../playlistId}}&trackId={{id}}">
          <img src="../../img/svg/delete-button.svg" alt="delete-track">
        </a>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/with}}
</main>




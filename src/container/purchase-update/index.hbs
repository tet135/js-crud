{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">
  {{>heading title="Зміна даних"}}
   
  {{#with data}}
  <form method="POST" action="/purchase-save?id={{id}}" class="form-card">

    <div>ID: {{id}}</div>

    <div class="form-card__section">
      {{>field label="Ім'я" name="firstname" value=firstname type=text grey=true}}
      {{>field label="Прізвище" name="lastname" value=lastname  type=text grey=true}}
      {{>field label="Мобільний телефон" name="phone" value=phone type=number grey=true}}
      {{>field label="Електронна пошта" name="email" value=email type=email grey=true}}
    </div>

    {{>button text="Зберегти дані"}}
    
  </form>
  {{/with}}

</main>



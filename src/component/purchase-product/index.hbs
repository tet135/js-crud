{{#with data}}
<div class="product-card">
    <div class="product-card__container">
        <img src="{{img}}" alt="{{title}}" class="product-card__image">
        <h2 class="product-card__title">{{title}}</h2>
        <p class="product-card__description">{{description}}</p>
        {{#each category}}
            <span class="product-card__category product-card__category--{{id}}">{{text}}</span>
        {{/each}}
    </div>
    
    <a href="/purchase-product?id={{id}}" class="product-card__link">
        {{>button text="Купити зараз" price=price }}
    </a>
</div>
{{/with}}
